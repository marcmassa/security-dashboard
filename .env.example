# Security Dashboard Environment Configuration
# Copy this file to .env and configure with your values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/security_dashboard
PGHOST=localhost
PGPORT=5432
PGUSER=username
PGPASSWORD=password
PGDATABASE=security_dashboard

# Application Configuration
SESSION_SECRET=your-256-bit-secret-key-here
FLASK_ENV=production
FLASK_DEBUG=False

# SonarQube Integration (Optional)
SONAR_URL=https://your-sonarqube-server.com
SONAR_TOKEN=your-sonarqube-token

# Gunicorn Configuration
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=30

# Security Settings
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000

# Feature Flags
ENABLE_SSO=False
ENABLE_REAL_TIME_MONITORING=True
ENABLE_WEBHOOKS=True

# External Service URLs
WEBHOOK_URL=https://your-webhook-endpoint.com
NOTIFICATION_SERVICE_URL=https://your-notification-service.com

# File Upload Settings
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=uploads

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=security-dashboard.log

# Redis Configuration (for future caching)
# REDIS_URL=redis://localhost:6379/0

# Email Configuration (for future notifications)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-email@domain.com
# MAIL_PASSWORD=your-app-password